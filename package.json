{
  "name": "fonzy-editor",
  "version": "0.1.2",
  "description": "A simple and extensible code editor component for React apps.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johncrowley-s2/fonzy-editor.git"
  },
  "author": "John Crowley",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/johncrowley-s2/fonzy-editor/issues"
  },
  "homepage": "https://github.com/johncrowley-s2/fonzy-editor#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.0.2"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "files": [
    "dist/**/*"
  ]
}
